<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1 style="text-align: center">New Fileupload</h1>

    <%= form_tag '/fileuploads', multipart: true  do %>
        <div class="form-field">
          <%= label_tag :project_name %><br>
          <%= text_field_tag :project_name ,nil ,class:"form-control" , placehoder:"Enter the project name" %>
        </div>
        <div class="form-field">
          <%= label_tag :file_name %><br>
          <%= text_field_tag :file_name ,nil ,class:"form-control" ,placehoder:"Enter the file name" %>
        </div>
        <div class="form-field">
          <%= label_tag :start %><br>
          <%= text_field_tag :start ,nil ,class:"form-control" ,placehoder:"Enter the Start row" %>
        </div>
        <div class="form-field">
          <%= label_tag :end %><br>
          <%= text_field_tag :end ,nil ,class:"form-control" ,placehoder:"Enter the End row" %>
        </div>
        <div class="form-field">
          <%= label_tag :unique %><br>
          <%= text_field_tag :unique ,nil ,class:"form-control" ,placehoder:"Enter the unique column" %>
        </div>
        <div class="form-field">
          <%= label_tag :last_row %><br>
          <%= text_field_tag :last_row ,nil ,class:"form-control" ,placehoder:"Enter the last  column" %>
        </div>
        <div>
          <br/>
          <%=file_field_tag :excel_file%>
        </div>
        <br/>
        <div class="actions">
          <%= submit_tag "import" ,class:"btn btn-primary"%>
        </div>
    <% end %>

  </div>
</div>
